<div class="center jumbotron">
  <h1>Welcome to OUR.TWITCH</h1>
  <%=image_tag("boringmouselogo.svg", alt: "Mouse ")%>

  <p>The only place with purple mice</p>

  <%if false%>
  <%= link_to "Login", '/login', class: "btn btn-lg btn-primary" %>
  <%= link_to "Sign up now!", '/signup', class: "btn btn-lg btn-primary" %>
  <%end %>
</div>




<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <iframe class = "twitch-player"
          src="https://player.twitch.tv/?channel=<%=@top_three_channels[0].name%>&muted=true"
          width="700"
          height="500"
          frameborder="100"
          scrolling="no"
          allowfullscreen="true">
        </iframe>
      </div>

      <div class="item">
        <iframe
          src="https://player.twitch.tv/?channel=<%=@top_three_channels[1].name%>&muted=true"
          width="700"
          height="500"
          frameborder="0"
          scrolling="no"
          allowfullscreen="true">
        </iframe>
      </div>

      <div class="item">
        <iframe
          src="https://player.twitch.tv/?channel=<%=@top_three_channels[2].name%>&muted=true"
          width="700"
          height="500"
          frameborder="0"
          scrolling="no"
          allowfullscreen="true">
        </iframe>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
