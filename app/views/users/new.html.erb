User New Form

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.collection_select(:language_id, @languages, :id, :abbreviation, prompt: true)%>
  <%= f.submit "Sign Up" %>
<% end %>

<% if flash[:message] %>
<br>
<%= flash[:message] %>
<% end %>
