User New Form

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :language %>
  <%= f.text_field :language %>
  <%= f.submit "Sign Up" %>
<% end %>

<% if flash[:message] %>
<br>
<%= flash[:message] %>
<% end %>
