<h1>Update <%=@user.username%>'s Profile</h1>
<% if flash[:message]%>
<h4 class="flash-msg"><%=flash[:message]%></h4>
<%end%>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :language_id%>
  <%= f.collection_select(:language_id, @languages, :id, :name, prompt: true)%>
  <br>
  <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
<% end %>

<br>
<br>
<%= button_to "Delete My Account", profile_path(@user), class: "btn btn-danger", :method=> "delete", data: { confirm: "Are you sure you want to delete your account? This action cannot be reversed."}%>
