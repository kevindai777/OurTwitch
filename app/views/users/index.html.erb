<h1>Followers</h1>



<h4>Search by Username:</h4>
<%= form_tag(users_path, method: :get) do%>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %>
<br>

<% if params[:search] %>

<% if @user_search.empty? %>
  <h5 text-align: center>No users found with that name</h5>
<% else %>
  <ul>
    <%@user_search.each do |user|%>
    <li><%= link_to user.username, profile_path(user) %> </li>
    <%end%>
  </ul>
<% end %>

<% end %>
