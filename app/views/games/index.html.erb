<h1>Top Games</h1>

<h4>Search by Name:</h4>
<%= form_tag(games_path, method: :get) do%>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %> 

<ul>
<%@data["top"].each do |game|%>
<li>
<%= link_to "#{game["game"]["name"]}: #{game["game"]["popularity"]}", "https://twitch.tv/directory/game/#{game["game"]["name"]}"%>
</li>
<% end %>
</ul>
